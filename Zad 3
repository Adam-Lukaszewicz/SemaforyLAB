public class SemaforyABC {
    
    private static final int COUNT = 10; //Number of letters displayed by threads
    private static final int DELAY = 5; //delay, in milliseconds, used to put a thread to sleep

    private static int A = 0;
    private static int B = 0;
    private static int C = 3;

    private static final Semaphore a = new Semaphore(1, true);
    private static final Semaphore b = new Semaphore(0, true);
    private static final Semaphore c = new Semaphore(0, true);
    private static final Semaphore PSEM = new Semaphore(0, true);

    public static void main(String[] args) {
        new A().start(); //runs a thread defined below 
        new B().start();
        new C().start();
        new D().start();
    }

    private static final class A extends Thread { //thread definition

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here   
                    a.acquire();
                    
                    A = 10;
                    B = B + 5;
                    c.release();
                    a.acquire();
                    C = C + A;
                  
                    //use semaphores here
                    Thread.sleep(DELAY);
            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread A: I'm done...");
        }
    }

    private static final class B extends Thread {

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here
                    b.acquire();
                    
                    B = B + C;
                    A = A + B;
                    //use semaphores here
                    Thread.sleep(DELAY);
            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread B: I'm done...");
        }
    }

    private static final class C extends Thread {

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here                   
                    c.acquire();
                   
                    C = B + 10;
                    A = 2 * A;
                    B = B + A;
                    //use semaphores here
                    PSEM.release();
                    Thread.sleep(DELAY);

            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread C: I'm done...");
        }
    }    
    
    private static final class D extends Thread {

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here
                    PSEM.acquire();                  
                    System.out.println("Sum result: " + A + " + " + B + " + " + C + " = " + (A + B + C));
                    //use semaphores here
                    a.release();
                    b.release();
                    Thread.sleep(DELAY);
                    
            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread D: I'm done...");
        }
    }
}

/////

public class SemaforyABC {
    
    private static final int COUNT = 10; //Number of letters displayed by threads
    private static final int DELAY = 5; //delay, in milliseconds, used to put a thread to sleep

    private static int A = 0;
    private static int B = 0;
    private static int C = 3;

    private static final Semaphore a = new Semaphore(1, true);
    private static final Semaphore b = new Semaphore(0, true);
    private static final Semaphore c = new Semaphore(0, true);
    private static final Semaphore PSEM = new Semaphore(0, true);

    public static void main(String[] args) {
        new A().start(); //runs a thread defined below 
        new B().start();
        new C().start();
        new D().start();
    }

    private static final class A extends Thread { //thread definition

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here   
                    a.acquire();
                    
                    A = 10;
                    b.release();
                    a.acquire();
                    B = B + 5;                    
                    C = C + A;
                  
                    //use semaphores here
                    Thread.sleep(DELAY);
            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread A: I'm done...");
        }
    }

    private static final class B extends Thread {

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here
                    b.acquire();                    
                    B = B + C;
                    c.release();
                    b.acquire();
                    A = A + B;
                    //use semaphores here
                    Thread.sleep(DELAY);
            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread B: I'm done...");
        }
    }

    private static final class C extends Thread {

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here                   
                    c.acquire();                   
                    C = B + 10;
                    PSEM.release();
                    c.acquire();
                    A = 2 * A;
                    B = B + A;
                    //use semaphores here                  
                    Thread.sleep(DELAY);

            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread C: I'm done...");
        }
    }    
    
    private static final class D extends Thread {

        @Override
        @SuppressWarnings("SleepWhileInLoop")

        public void run() {
            try {
                    //use semaphores here
                    PSEM.acquire();                  
                    System.out.println("Sum result: " + A + " + " + B + " + " + C + " = " + (A + B + C));
                    //use semaphores here
                    a.release();
                    b.release();
                    c.release();
                    Thread.sleep(DELAY);
                    
            } catch (InterruptedException ex) {
                System.out.println("Ooops...");
                Thread.currentThread().interrupt();
                throw new RuntimeException(ex);
            }
            System.out.println("\nThread D: I'm done...");
        }
    }
}
